<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.8" group="system" method="upgrade">
	<name>PLG_CLUB</name>
	<creationDate>11.07.2019</creationDate>
	<author>XAKEPok</author>
	<authorEmail>xakepok@xakepok.com</authorEmail>
	<authorUrl>https://your.xakepok.com</authorUrl>
	<copyright>A copyright</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.0.0</version>
	<description>PLG_CLUB_XML_DESCRIPTION</description>

	<!-- Language files -->
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_club.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_club.sys.ini</language>
	</languages>

	<!-- Plugin files -->
	<files>
		<filename plugin="club">club.php</filename>
		<folder>language</folder>
	</files>

	<!-- Config parameter -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="group"
					type="usergrouplist"
					label="PLG_CLUB_PARAMS_GROUP"
					description="PLG_CLUB_PARAMS_GROUP_DESC"
				/>
			</fieldset>
		</fields>
	</config>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="club">https://www.xakepok.com/Thrid/update/plg_club.xml</server>
	</updateservers>
</extension>
